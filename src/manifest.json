{
  "manifest_version": 2,
  "name": "EhSyringe",
  "description": "E站注射器，将中文翻译注入到E站体内。",
  "author": "xioxin",
  "version": "1.0.2",
  "icons": {
    "32": "assets/logo32.png",
    "16": "assets/logo16.png",
    "48": "assets/logo48.png",
    "128": "assets/logo128.png"
  },
  "omnibox": {
    "keyword" : "eh"
   },
  "background": {
    "scripts": ["script/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://exhentai.org/*", "*://e-hentai.org/*", "*://*.exhentai.org/*", "*://*.e-hentai.org/*"],
      "js": [ "script/syringe.js" ],
      "run_at": "document_start"
    },
    {
      "matches": ["*://exhentai.org/*", "*://e-hentai.org/*", "*://*.exhentai.org/*", "*://*.e-hentai.org/*"],
      "js": ["script/tag-tip.js" ],
      "run_at": "document_end"
    },
    {
      "matches": ["*://exhentai.org/*", "*://e-hentai.org/*", "*://*.exhentai.org/*", "*://*.e-hentai.org/*"],
      "js": ["script/introduce.js" ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "*://exhentai.org/*",
    "*://e-hentai.org/*",
    "*://*.exhentai.org/*",
    "*://*.e-hentai.org/*",
    "*://github.com/*",
    "*://*.amazonaws.com/*",
    "activeTab",
    "notifications",
    "storage",
    "contextMenus"
  ]
}
